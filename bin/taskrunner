#!/usr/bin/env bash

P=${BASH_SOURCE%/*}

. $P/colors

taskDone() {
  tput cnorm
  green "\xE2\x9C\x94 "
  light "$1"
  echo
}

taskStart() {
  PID=$!
  tput civis
  spin='∶∴∷∵'
  i=0
  while kill -0 $PID 2> /dev/null
  do
    i=$(( (i+1) %4 ))
    printf "\r${spin:$i:1}"
    dark " $1"
    sleep .1
  done
  printf "\r"
}
